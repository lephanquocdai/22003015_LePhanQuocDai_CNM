<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Product Management</title>
</head>

<body>

    <h2>Add Product</h2>
    <form action="/add" method="post">
        Name: <input name="name" required><br><br> Price: <input name="price" type="number" step="0.01" required><br><br> Quantity: <input name="quantity" type="number" required><br><br>
        <button type="submit">Add</button>
    </form>

    <hr>

    <h2>Product List</h2>
    <table border="1" cellpadding="5">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>

        <% products.forEach(p => { %>
            <tr>
                <td>
                    <%= p.id %>
                </td>
                <td>
                    <%= p.name %>
                </td>
                <td>
                    <%= p.price %>
                </td>
                <td>
                    <%= p.quantity %>
                </td>
            </tr>
            <% }) %>
    </table>

</body>

</html>